// schema.prisma
datasource db {
  provider = "sqlite"
  url      = "file:./db.sqlite" // For local development
  // For Cloudflare D1 in production, you'll configure this in your Hono app
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

model Phone {
  id         Int    @id @default(autoincrement())
  model      String
  brand      String
  ram        Int
  storage    Int
  price      Float
  imageUrl   String
  websiteUrl String

  @@map("phone") // Maps to the "phone" table in D1
}
